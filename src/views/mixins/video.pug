mixin video(info)
    div
        h4
            //- a(href=`/videos/${info.id}`)=info.title
            a(href="/videos/"+info.id)=info.title
        p=info.description
        ul
            each hashtag in info.hashtags
                li=hashtag
        small=info.createdAt
        hr

